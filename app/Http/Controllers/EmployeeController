    // Proses login
    public function login(Request $request)
    {
        // Cek apakah input tersedia
        if (!$request->has('username') || !$request->has('password')) {
            return redirect()->back()->with('error', 'Form login belum lengkap!');
        }

        // Ambil input
        $username = $request->input('username');
        $password = $request->input('password');

        // Validasi: hanya cek minimal 8 karakter
        $validator = Validator::make($request->all(), [
            'username' => ['required'], // Tambahkan validasi untuk username
            'password' => ['required', 'min:8'],
        ], [
            'username.required' => 'Username wajib diisi.',
            'password.required' => 'Password wajib diisi.',
            'password.min' => 'Password minimal 8 karakter.',
        ]);

        if ($validator->fails()) {
            return redirect()->back()->withErrors($validator)->withInput();
        }

        // Logika login: username & password harus sama dengan ID employee
        if ($username === '2455301159' && $password === '2455301159') {
            // Redirect ke dashboard atau halaman setelah login berhasil
            return redirect('/dashboard')->with('success', 'Login berhasil! Selamat datang Employee KeceðŸ˜Ž.');
        }

        return redirect()->back()->with('error', 'Username atau Passwordmu salahðŸ˜­')->withInput();
    }

